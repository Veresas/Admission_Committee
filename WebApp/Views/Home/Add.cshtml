﻿@using Contracts.Models;
@model Student

@{
	ViewData["Title"] = "Создать новую информаию об абитуриенте";
}

<h2>Создать абитуриента</h2>

<form asp-action="Add" method="post">
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Gender"></label>
		<select asp-for="Gender" class="form-control" asp-items="@(DropedList.GetEnumDescriptions(typeof(Gender)))"></select>
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="BirthDay"></label>
		<input asp-for="BirthDay" type="date" class="form-control" />
		<span asp-validation-for="BirthDay" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Education"></label>
		<select asp-for="Education" class="form-control" asp-items="@(DropedList.GetEnumDescriptions(typeof(EducationFrom)))"></select>
		<span asp-validation-for="Education" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="MathScores"></label>
		<input asp-for="MathScores" class="form-control" />
		<span asp-validation-for="MathScores" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="RusScores"></label>
		<input asp-for="RusScores" class="form-control" />
		<span asp-validation-for="RusScores" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ITScores"></label>
		<input asp-for="ITScores" class="form-control" />
		<span asp-validation-for="ITScores" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary"
			style="margin-top: 15px">
		Сохранить абитуриента
	</button>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
